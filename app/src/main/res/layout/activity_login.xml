<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal|center_vertical"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/skytel_logo_color"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:background="@drawable/skytel_logo_white"
        android:layout_marginBottom="30dp"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_username"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:hint="@string/text_username"
        android:transitionName="@string/text_username"
        android:backgroundTint="@android:color/primary_text_dark_nodisable"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textColorHint="@android:color/primary_text_dark_nodisable"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/et_password"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:hint="@string/text_password"
        android:transitionName="@string/text_password"
        android:backgroundTint="@android:color/primary_text_dark_nodisable"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textColorHint="@android:color/primary_text_dark_nodisable"
        />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_login"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radio 1"
                android:id="@+id/rb_dealer"
                android:checked="true"
                android:textColor="@android:color/secondary_text_dark_nodisable"
                android:buttonTint="@color/colorSkytelYellow"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Radio 2"
                android:id="@+id/rb_employee"
                android:textColor="@android:color/secondary_text_dark_nodisable"
                android:buttonTint="@color/colorSkytelYellow"/>
        </RadioGroup>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@color/colorMenuText"></View>
        <Button
            android:id="@+id/btn_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_forget_password"
            android:textColor="@android:color/secondary_text_dark_nodisable"
            android:background="?android:attr/selectableItemBackground"
            />
        </LinearLayout>

</LinearLayout>