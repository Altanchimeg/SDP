<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorGrey"
    android:orientation="horizontal"
    android:layout_margin="@dimen/second_padding">

    <ImageView

        android:id="@+id/content_image"
        android:layout_width="@dimen/logo_height"
        android:layout_height="@dimen/logo_height"
        android:layout_gravity="center_vertical"

        android:background="@drawable/background" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_header"
            style="@style/MainViewTextViewBlue"
            android:text="Header is here!" />

        <TextView
            android:id="@+id/content_date"
            style="@style/MainViewTextViewGrey"
            android:text="Date is here!"
            />
    </LinearLayout>
</LinearLayout>